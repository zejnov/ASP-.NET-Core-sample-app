@page "{id:int}"
@model MyWebApp.Pages.EditEmail

@{
    ViewData["Title"] = "Edit person email";
}

<h4>Edit Email</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailView!.Address" class="control-label"></label>
                <input asp-for="EmailView!.Address" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./EditPerson" asp-route-id=EmailView.PersonId>Back to person edit</a>
</div>